{% block body %}

    <h1>Your Cart</h1>
    {% if cart.items.count > 0 %}

            <div class="col-md-8">
            {{ form_start(form) }}
            Items:
            {% for item in form.items %}
                <div class="row mt-4">
                {{ item.vars.data.product.title }}
                {{ form_widget(item.quantity) }} {{ form_widget(item.update) }}
                    {{ items.total() }}
                </div>
            {% endfor %}
            {{ form_end(form) }}
            </div>
